@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h1>Excluir Usuário</h1>

<div>
    <h3>Você tem certeza que deseja excluir este usuário?</h3>
    <div>
        <h4>Usuário: @Model.UserName</h4>
        <p>Email: @Model.Email</p>
    </div>
</div>

<form asp-action="ConfirmDeleteUser" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div>
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Usuarios" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
